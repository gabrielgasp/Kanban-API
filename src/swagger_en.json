              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TASKS_LIST_RESPONSE"
                },
                "example": [
                  {
                    "_id": "625c670e01ee4e6f9d2c125c",
                    "boardId": 1,
                    "status": "DONE",
                    "title": "Bake a cake",
